{
  "version": 2,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 16,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "debug",
      "displayName": "debug",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build-fooyin-dev",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "BUILD_TESTING" : "ON"
      }
    },
    {
      "name": "release",
      "displayName": "release",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build-fooyin-dev",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "BUILD_TESTING" : "OFF"
      }
    }
  ]
}
